{
  "$schema": "https://unpkg.com/release-it@17/schema/release-it.json",
  "hooks": {
    "after:bump": [
      "bun run build"
    ]
  },
  "git": {
    "commitMessage": "release: v${version}",
    "tagName": "v${version}",
    "requireCleanWorkingDir": false
  },
  "npm": {
    "publish": true
  },
  "github": {
    "release": true
  },
  "plugins": {
    "@release-it/conventional-changelog": {
      "header": "# Changelog",
      "infile": "CHANGELOG.md",
      "preset": {
        "name": "conventionalcommits",
        "types": [
          {
            "type": "feat",
            "section": "‚ú® Features"
          },
          {
            "type": "fix",
            "section": "üêõ Bug Fixes"
          },
          {
            "type": "improvement",
            "section": "üñåÔ∏è Improvements"
          },
          {
            "type": "chore",
            "section": "üßπ Chores"
          },
          {
            "type": "release",
            "hidden": true
          }
        ]
      }
    }
  }
}