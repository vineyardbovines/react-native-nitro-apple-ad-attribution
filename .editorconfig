root = true

[*]
charset = utf-8
end_of_line = lf
indent_size = 2
indent_style = space
insert_final_newline = true
max_line_length = 100
trim_trailing_whitespace = true

[*.{ts,tsx,js,jsx,json,toml,yml,yaml,json}]
indent_size = 2
indent_style = space

[*.{cpp,hpp,h,m,mm,swift}]
indent_style = space
indent_size = 4
